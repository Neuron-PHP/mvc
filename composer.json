{
    "name": "neuron-php/mvc",
    "description": "MVC manager.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Lee Jones",
            "email": "lee@dragonflyrg.com"
        }
    ],
    "require": {
      "php": "^8.4",
      "ext-curl": "*",
      "ext-json": "*",
      "neuron-php/application": "0.8.*",
      "neuron-php/routing": "0.8.*",
      "neuron-php/dto": "0.0.*",
      "league/commonmark": "^2.6",
      "neuron-php/cli": "0.8.*",
      "robmorgan/phinx": "^0.16",
      "neuron-php/jobs": "0.2.*"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "phpmd/phpmd": "^2.15",
        "mikey179/vfsstream": "^1.6",
        "neuron-php/scaffolding": "0.8.*"
    },
    "suggest": {
        "ext-redis": "Required for Redis cache storage backend"
    },
    "autoload": {
        "files": [
            "src/Bootstrap.php"
        ],
        "psr-4": {
            "Neuron\\": "src/"
        }
    },
    "autoload-dev": {
      "psr-4": {
        "Mvc\\": "tests/Mvc",
        "Tests\\": "tests/Tests",
        "Neuron\\Core\\": "../core/src/Core/"
      }
    },
    "extra": {
        "neuron": {
            "cli-provider": "Neuron\\Mvc\\Cli\\Provider"
        }
    }
}
